<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        card_view:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingEnd="0dp"
            android:paddingStart="16dp">

            <LinearLayout
                android:id="@+id/layout_row_event"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="8dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/textview_row_event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <!-- Date -->
                <TextView
                    android:id="@+id/textview_row_event_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/warm_grey"
                    android:textSize="14sp" />

                <!-- Date -->
                <TextView
                    android:id="@+id/textview_row_event_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/warm_grey"
                    android:textSize="14sp" />

                <!-- Desc -->
                <TextView
                    android:id="@+id/textview_row_event_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:lines="4"
                    android:textColor="@color/warm_grey"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_row_event"
                android:layout_width="100dp"
                android:layout_height="132dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
